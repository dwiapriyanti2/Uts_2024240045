<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="26dp"
    tools:context=".dua">
    <TextView
        android:id="@+id/tv_konfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KONFIRMASI PENDAFTARAN"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        />

    <TextView
        android:id="@+id/tv_namapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@id/tv_konfirmasi"
        android:text="Nama" />

    <TextView
        android:id="@+id/tv_no_pendaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@id/tv_namapel"
        android:text="Nomor Pendaftaran"
        />

    <TextView
        android:id="@+id/tv_jalur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_no_pendaf"
        android:layout_marginTop="24dp"
        android:text="Tes tertulis" />


</RelativeLayout>